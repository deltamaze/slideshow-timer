@page "/"
@using blazor.Components
@using blazor.Store
@inject AppState AppState
@implements IDisposable




<TimerService />
<StopwatchService/>
<div id="modal-container" class="@modalContentClass">
    <div class="modal-background">
        <div class="modal">
            <h2>I'm a Modal</h2>
            <p>Hear me roar.</p>
            <svg class="modal-svg" xmlns="http://www.w3.org/2000/svg" width="100%" height="100%" preserveAspectRatio="none">
                <rect x="0" y="0" fill="none" width="226" height="162" rx="3" ry="3"></rect>
            </svg>
        </div>
    </div>
</div>

<div id="appContents" class="@contentClass">
    <div id="appBody">
        <div id="appCenter">
            <Stopwatch />
        </div>
    </div>
    <div id="appFooter">
        <div id="appFooterActions">
            <button class="btn-primary appFooterActions" @onclick="ShowSettings">Settings</button>
        </div>
    </div>
</div>



@code {

    string contentClass = "";
    string modalContentClass = "";

    protected override void OnInitialized()
    {
        AppState.OnChange += StateHasChanged;
    }

    public void Dispose()
    {
        AppState.OnChange -= StateHasChanged;
    }

    void ShowSettings()
    {
        contentClass = "modal-active";
        modalContentClass = "one";
    }

}