@page "/"
@using blazor.Components
@using blazor.Store
@inject AppState AppState
@implements IDisposable




<TimerService />
<StopwatchService/>

@*<Modal />*@
<div id="appContents" class="@AppState.AppModal.ContentClass">
    <div id="appBody">
        <div id="appCenter">
            <Stopwatch />
        </div>
    </div>
    <div id="appFooter">
        <div id="appFooterActions">
            <button class="btn-primary appFooterActions" @onclick="AppState.AppModal.ShowModal">Settings</button>
        </div>
    </div>
</div>



@code {

    protected override void OnInitialized()
    {
        AppState.OnChange += StateHasChanged;
    }

    public void Dispose()
    {
        AppState.OnChange -= StateHasChanged;
    }

}